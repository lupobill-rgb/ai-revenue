{
  "id": "ai_cmo",
  "name": "AI CMO Module",
  "version": "2.0.0",
  "description": "AI CMO module for marketing automation, funnel, campaign, and optimization.",
  "entry_agent": "CMO Orchestrator",
  "orchestrator_prompt": "/agents/cmo/orchestrator.system.prompt.txt",
  "modes": ["setup", "strategy", "funnels", "campaigns", "content", "optimization"],
  "requires": ["supabase", "kernel", "ai_gateway"],
  "docs": [
    "/knowledge/cmo/module.md",
    "/knowledge/cmo/backend_requirements.md",
    "/knowledge/cmo/frontend_requirements.md"
  ],
  "schemas": [
    "cmo_brand_profiles",
    "cmo_icp_segments",
    "cmo_offers",
    "cmo_marketing_plans",
    "cmo_plan_milestones",
    "cmo_funnels",
    "cmo_funnel_stages",
    "cmo_campaigns",
    "cmo_campaign_channels",
    "cmo_content_assets",
    "cmo_content_variants",
    "cmo_calendar_events",
    "cmo_metrics_snapshots",
    "cmo_weekly_summaries",
    "cmo_recommendations"
  ],
  "ui": {
    "basePath": "/cmo",
    "primaryScreens": [
      "Dashboard",
      "Setup",
      "Plan",
      "Funnels",
      "Campaigns",
      "Content",
      "Calendar",
      "Analytics",
      "Settings"
    ]
  },
  "permissions": {
    "tenant": true,
    "role": ["admin", "marketer"]
  },
  "agents": {
    "brandIntake": {
      "prompt": "/agents/cmo/setup/brandIntake.prompt.txt",
      "function": "cmo-brand-intake"
    },
    "plan90Day": {
      "prompt": "/agents/cmo/strategy/plan90d.prompt.txt",
      "function": "cmo-plan-90day"
    },
    "funnelArchitect": {
      "prompt": "/agents/cmo/funnels/funnelArchitect.prompt.txt",
      "function": "cmo-funnel-architect"
    },
    "campaignDesigner": {
      "prompt": "/agents/cmo/campaigns/campaignDesigner.prompt.txt",
      "function": "cmo-campaign-designer"
    },
    "contentEngine": {
      "prompt": "/agents/cmo/content/contentEngine.prompt.txt",
      "function": "cmo-content-engine"
    },
    "optimizationAnalyst": {
      "prompt": "/agents/cmo/analytics/optimizationAnalyst.prompt.txt",
      "function": "cmo-optimization-analyst"
    }
  }
}
